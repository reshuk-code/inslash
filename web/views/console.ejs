<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h1 class="text-2xl font-semibold text-gray-900 dark:text-white">API Console</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Interactive testing environment &mdash; v2.0.0</p>
        </div>
        <div class="flex items-center gap-3">
            <span
                class="px-3 py-1 bg-indigo-50 dark:bg-indigo-900/20 text-indigo-700 dark:text-indigo-400 text-xs font-mono font-medium rounded-lg border border-indigo-200 dark:border-indigo-800">
                5 ENDPOINTS
            </span>
            <span
                class="px-3 py-1 bg-green-50 dark:bg-green-900/20 text-green-700 dark:text-green-400 text-xs font-mono font-medium rounded-lg border border-green-200 dark:border-green-800">
                ENV: <%= process.env.NODE_ENV==='production' ? 'LIVE' : 'DEV' %>
            </span>
        </div>
    </div>

    <% if (!defaultKey) { %>
        <!-- Empty State -->
        <div
            class="mt-12 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-2xl p-12 text-center max-w-3xl mx-auto shadow-xl">
            <div
                class="inline-flex items-center justify-center w-20 h-20 rounded-2xl bg-gradient-to-br from-indigo-500 to-purple-500 mb-6 shadow-lg shadow-indigo-500/50">
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-3">Authentication Required</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-8 max-w-md mx-auto">
                You need an API Key to send requests. Create a project to generate your credentials.
            </p>
            <a href="/projects/new"
                class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-semibold rounded-xl shadow-lg shadow-indigo-500/50 transition-all duration-300 hover:scale-105">
                Generate API Key
            </a>
        </div>
        <% } else { %>

            <div
                class="grid grid-cols-1 xl:grid-cols-12 gap-0 border border-gray-200 dark:border-gray-800 rounded-lg overflow-hidden shadow-2xl bg-white dark:bg-[#0d1117]">

                <!-- Left Panel: Config -->
                <div
                    class="xl:col-span-5 border-b xl:border-b-0 xl:border-r border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-[#0d1117] p-6 flex flex-col">
                    <div class="mb-5 flex items-center justify-between">
                        <h3 class="text-xs font-mono font-bold text-gray-500 uppercase tracking-wider">Request Config
                        </h3>
                    </div>

                    <form id="sandboxForm" onsubmit="sendRequest(event)" class="space-y-5 flex-grow flex flex-col">

                        <!-- API Key -->
                        <div>
                            <label class="block text-xs font-medium text-gray-400 mb-2 font-mono">X-API-KEY</label>
                            <input type="text" id="apiKey" value="<%= defaultKey %>"
                                class="w-full bg-[#161b22] border border-gray-700 rounded px-3 py-2 text-sm text-gray-300 font-mono focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none transition-colors"
                                placeholder="inslash_..." required>
                        </div>

                        <!-- Endpoint -->
                        <div>
                            <label class="block text-xs font-medium text-gray-400 mb-2 font-mono">ENDPOINT</label>
                            <div class="relative">
                                <select id="endpoint" onchange="updateForm()"
                                    class="w-full bg-[#161b22] border border-gray-700 rounded px-3 py-2 text-sm text-gray-300 font-mono focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none appearance-none cursor-pointer">
                                    <option value="hash">POST /api/hash</option>
                                    <option value="verify">POST /api/verify</option>
                                    <option value="inspect">POST /api/inspect</option>
                                    <option value="batch-verify">POST /api/batch-verify</option>
                                    <option value="security">POST /api/security</option>
                                </select>
                                <div
                                    class="absolute inset-y-0 right-0 flex items-center px-2 pointer-events-none text-gray-500">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M19 9l-7 7-7-7" />
                                    </svg>
                                </div>
                            </div>
                        </div>

                        <div class="border-t border-gray-800"></div>

                        <!-- ── HASH FIELDS ── -->
                        <div id="hashFields" class="space-y-4">
                            <div>
                                <label class="block text-xs font-medium text-gray-400 mb-2 font-mono">PASSWORD</label>
                                <input type="text" id="hashPassword"
                                    class="w-full bg-[#161b22] border border-gray-700 rounded px-3 py-2 text-sm text-white focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none"
                                    value="superSecret123">
                            </div>

                            <!-- Security Preset -->
                            <div>
                                <label class="block text-[10px] text-gray-500 mb-1 font-mono uppercase">Security
                                    Preset</label>
                                <select id="hashPreset" onchange="applyPreset()"
                                    class="w-full bg-[#161b22] border border-gray-700 rounded px-3 py-2 text-xs text-gray-300 font-mono focus:border-indigo-500 outline-none">
                                    <option value="">Custom</option>
                                    <option value="fast">fast &mdash; sha256 / 50k iter</option>
                                    <option value="balanced" selected>balanced &mdash; sha256 / 100k iter</option>
                                    <option value="strong">strong &mdash; sha384 / 200k iter</option>
                                    <option value="paranoid">paranoid &mdash; sha512 / 400k iter</option>
                                </select>
                            </div>

                            <div class="p-3 rounded bg-[#161b22] border border-gray-700">
                                <div class="grid grid-cols-2 gap-3">
                                    <div>
                                        <label
                                            class="block text-[10px] text-gray-500 mb-1 font-mono uppercase">Iterations</label>
                                        <input type="number" id="hashIterations"
                                            class="w-full bg-transparent border-b border-gray-700 py-1 text-xs text-gray-300 focus:border-indigo-500 outline-none"
                                            placeholder="100000">
                                    </div>
                                    <div>
                                        <label
                                            class="block text-[10px] text-gray-500 mb-1 font-mono uppercase">Algorithm</label>
                                        <select id="hashAlgo"
                                            class="w-full bg-transparent border-b border-gray-700 py-1 text-xs text-gray-300 focus:border-indigo-500 outline-none">
                                            <option value="">Default</option>
                                            <option value="sha256">SHA-256</option>
                                            <option value="sha384">SHA-384</option>
                                            <option value="sha512">SHA-512</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- ── VERIFY FIELDS ── -->
                        <div id="verifyFields" class="space-y-4 hidden">
                            <div>
                                <label class="block text-xs font-medium text-gray-400 mb-2 font-mono">PASSWORD</label>
                                <input type="text" id="verifyPassword"
                                    class="w-full bg-[#161b22] border border-gray-700 rounded px-3 py-2 text-sm text-white focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none"
                                    value="superSecret123">
                            </div>
                            <div>
                                <div class="flex justify-between items-end mb-2">
                                    <label class="block text-xs font-medium text-gray-400 font-mono">PASSPORT</label>
                                    <button type="button" onclick="pasteLastPassport('verifyPassport')"
                                        class="text-[10px] font-mono text-indigo-400 hover:text-indigo-300">PASTE
                                        LAST</button>
                                </div>
                                <textarea id="verifyPassport" rows="4"
                                    class="w-full bg-[#161b22] border border-gray-700 rounded px-3 py-2 text-xs text-gray-300 font-mono focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none resize-none leading-relaxed"
                                    placeholder="$inslash$2$..."></textarea>
                            </div>
                        </div>

                        <!-- ── INSPECT FIELDS ── -->
                        <div id="inspectFields" class="space-y-4 hidden">
                            <p class="text-xs text-gray-500 font-mono">Decode passport metadata without verifying.</p>
                            <div>
                                <div class="flex justify-between items-end mb-2">
                                    <label class="block text-xs font-medium text-gray-400 font-mono">PASSPORT</label>
                                    <button type="button" onclick="pasteLastPassport('inspectPassport')"
                                        class="text-[10px] font-mono text-indigo-400 hover:text-indigo-300">PASTE
                                        LAST</button>
                                </div>
                                <textarea id="inspectPassport" rows="5"
                                    class="w-full bg-[#161b22] border border-gray-700 rounded px-3 py-2 text-xs text-gray-300 font-mono focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none resize-none leading-relaxed"
                                    placeholder="$inslash$2$..."></textarea>
                            </div>
                        </div>

                        <!-- ── BATCH VERIFY FIELDS ── -->
                        <div id="batchVerifyFields" class="space-y-4 hidden">
                            <p class="text-xs text-gray-500 font-mono">Verify multiple values against one passport.</p>
                            <div>
                                <label class="block text-xs font-medium text-gray-400 mb-2 font-mono">VALUES <span
                                        class="text-gray-600">(comma-separated)</span></label>
                                <textarea id="batchValues" rows="3"
                                    class="w-full bg-[#161b22] border border-gray-700 rounded px-3 py-2 text-xs text-gray-300 font-mono focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none resize-none"
                                    placeholder="guess1, guess2, correctPassword"></textarea>
                            </div>
                            <div>
                                <div class="flex justify-between items-end mb-2">
                                    <label class="block text-xs font-medium text-gray-400 font-mono">PASSPORT</label>
                                    <button type="button" onclick="pasteLastPassport('batchPassport')"
                                        class="text-[10px] font-mono text-indigo-400 hover:text-indigo-300">PASTE
                                        LAST</button>
                                </div>
                                <textarea id="batchPassport" rows="3"
                                    class="w-full bg-[#161b22] border border-gray-700 rounded px-3 py-2 text-xs text-gray-300 font-mono focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none resize-none leading-relaxed"
                                    placeholder="$inslash$2$..."></textarea>
                            </div>
                        </div>

                        <!-- ── SECURITY FIELDS ── -->
                        <div id="securityFields" class="space-y-4 hidden">
                            <p class="text-xs text-gray-500 font-mono">Score a passport's security strength and get
                                recommendations.</p>
                            <div>
                                <div class="flex justify-between items-end mb-2">
                                    <label class="block text-xs font-medium text-gray-400 font-mono">PASSPORT</label>
                                    <button type="button" onclick="pasteLastPassport('securityPassport')"
                                        class="text-[10px] font-mono text-indigo-400 hover:text-indigo-300">PASTE
                                        LAST</button>
                                </div>
                                <textarea id="securityPassport" rows="5"
                                    class="w-full bg-[#161b22] border border-gray-700 rounded px-3 py-2 text-xs text-gray-300 font-mono focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 outline-none resize-none leading-relaxed"
                                    placeholder="$inslash$2$..."></textarea>
                            </div>
                        </div>

                        <div class="pt-4 mt-auto">
                            <button type="submit" id="sendBtn"
                                class="w-full py-2 px-4 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded transition-colors shadow-lg shadow-indigo-900/50 flex items-center justify-center gap-2">
                                <span id="btnText">Send Request</span>
                                <svg id="btnSpinner" class="animate-spin h-4 w-4 text-white hidden"
                                    xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor"
                                        stroke-width="4"></circle>
                                    <path class="opacity-75" fill="currentColor"
                                        d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z">
                                    </path>
                                </svg>
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Right Panel: Response + History -->
                <div class="xl:col-span-7 bg-[#0d1117] flex flex-col border-l border-gray-800">

                    <!-- Response Header -->
                    <div class="px-6 py-4 border-b border-gray-800 flex justify-between items-center bg-[#0d1117]">
                        <div class="flex items-center gap-4">
                            <h3 class="text-xs font-mono font-bold text-gray-500 uppercase tracking-wider">Response</h3>
                        </div>
                        <div class="flex items-center gap-3">
                            <button id="copyPassportBtn" onclick="copyPassportFromResponse()"
                                title="Copy passport from response"
                                class="hidden text-[10px] font-mono text-indigo-400 hover:text-indigo-300 border border-indigo-800 rounded px-2 py-0.5 transition-colors">
                                COPY PASSPORT
                            </button>
                            <div id="statusBadge" class="hidden px-2 py-0.5 rounded text-[10px] font-mono font-bold">
                                WAITING</div>
                        </div>
                    </div>

                    <!-- Code Area -->
                    <div class="flex-grow p-6 overflow-auto custom-scrollbar bg-[#0d1117] min-h-[280px]">
                        <pre id="responseOutput"
                            class="font-mono text-sm leading-relaxed text-gray-400">// Send a request to see the response...</pre>
                    </div>

                    <!-- Field Guide (dynamic) -->
                    <div id="fieldGuide" class="border-t border-gray-800 bg-[#161b22]/50 p-5">
                        <h4 class="text-[10px] font-mono font-bold text-indigo-400 uppercase tracking-wider mb-3">Field
                            Guide</h4>
                        <div id="fieldGuideContent"
                            class="grid grid-cols-2 gap-y-3 gap-x-8 text-xs font-mono text-gray-500">
                            <div><span class="text-gray-300 block mb-0.5">passport</span><span
                                    class="text-[10px]">Encoded hash string &mdash; store in DB.</span></div>
                            <div><span class="text-gray-300 block mb-0.5">algorithm</span><span
                                    class="text-[10px]">sha256 / sha384 / sha512.</span></div>
                            <div><span class="text-gray-300 block mb-0.5">iterations</span><span
                                    class="text-[10px]">HMAC rounds applied.</span></div>
                            <div><span class="text-gray-300 block mb-0.5">history</span><span class="text-[10px]">Audit
                                    trail of upgrades.</span></div>
                        </div>
                    </div>

                    <!-- Request History + Footer -->
                    <div class="border-t border-gray-800 bg-[#161b22]">
                        <!-- History -->
                        <div class="px-5 py-3 border-b border-gray-800">
                            <div class="flex items-center justify-between mb-2">
                                <span
                                    class="text-[10px] font-mono font-bold text-gray-500 uppercase tracking-wider">Request
                                    History</span>
                                <button onclick="clearHistory()"
                                    class="text-[10px] font-mono text-gray-600 hover:text-gray-400">CLEAR</button>
                            </div>
                            <div id="requestHistory" class="flex flex-col gap-1.5 text-[10px] font-mono text-gray-600">
                                <span class="text-gray-700 italic">No requests yet</span>
                            </div>
                        </div>
                        <!-- Footer -->
                        <div class="px-6 py-2.5 flex justify-between text-[10px] text-gray-500 font-mono">
                            <span id="latencyDisplay">LATENCY: -- ms</span>
                            <span>application/json</span>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
</div>

<script>
    let lastPassport = '';
    let requestHistory = [];

    const PRESETS = {
        fast: { iterations: 50000, algorithm: 'sha256' },
        balanced: { iterations: 100000, algorithm: 'sha256' },
        strong: { iterations: 200000, algorithm: 'sha384' },
        paranoid: { iterations: 400000, algorithm: 'sha512' },
    };

    const FIELD_GUIDES = {
        hash: [
            { key: 'passport', desc: 'Encoded hash string &mdash; store in DB.' },
            { key: 'algorithm', desc: 'sha256 / sha384 / sha512.' },
            { key: 'iterations', desc: 'HMAC rounds applied.' },
            { key: 'history', desc: 'Audit trail of upgrades.' },
        ],
        verify: [
            { key: 'valid', desc: 'true if password matches.' },
            { key: 'needsUpgrade', desc: 'true if hash should be upgraded.' },
            { key: 'upgradedPassport', desc: 'New passport to save (if upgrade needed).' },
            { key: 'upgradeReasons', desc: 'Why an upgrade was triggered.' },
        ],
        inspect: [
            { key: 'version', desc: 'Passport format version.' },
            { key: 'algorithm', desc: 'Algorithm used to hash.' },
            { key: 'iterations', desc: 'Iteration count.' },
            { key: 'history', desc: 'Full upgrade history.' },
        ],
        'batch-verify': [
            { key: 'summary.valid', desc: 'Count of matching values.' },
            { key: 'summary.invalid', desc: 'Count of non-matching values.' },
            { key: 'results', desc: 'Per-value result array.' },
            { key: 'needsUpgrade', desc: 'Whether hash needs upgrading.' },
        ],
        security: [
            { key: 'score', desc: 'Security score 0&ndash;100.' },
            { key: 'level', desc: 'Excellent / Strong / Good / Fair / Weak / Critical.' },
            { key: 'recommendations', desc: 'Actionable improvement suggestions.' },
            { key: 'metadata', desc: 'Algorithm, iterations, salt/hash length.' },
        ],
    };

    function applyPreset() {
        const preset = document.getElementById('hashPreset').value;
        if (!preset || !PRESETS[preset]) return;
        document.getElementById('hashIterations').value = PRESETS[preset].iterations;
        document.getElementById('hashAlgo').value = PRESETS[preset].algorithm;
    }

    function updateForm() {
        const endpoint = document.getElementById('endpoint').value;
        const panels = ['hashFields', 'verifyFields', 'inspectFields', 'batchVerifyFields', 'securityFields'];
        const map = {
            hash: 'hashFields',
            verify: 'verifyFields',
            inspect: 'inspectFields',
            'batch-verify': 'batchVerifyFields',
            security: 'securityFields',
        };
        panels.forEach(id => document.getElementById(id).classList.add('hidden'));
        document.getElementById(map[endpoint]).classList.remove('hidden');

        // Update field guide
        const guide = FIELD_GUIDES[endpoint] || [];
        const content = document.getElementById('fieldGuideContent');
        content.innerHTML = guide.map(f =>
            `<div><span class="text-gray-300 block mb-0.5">${f.key}</span><span class="text-[10px]">${f.desc}</span></div>`
        ).join('');
    }

    function pasteLastPassport(targetId) {
        const field = document.getElementById(targetId);
        if (lastPassport) {
            field.value = lastPassport;
            field.classList.add('border-indigo-500');
            setTimeout(() => field.classList.remove('border-indigo-500'), 600);
        } else {
            alert('No passport generated yet. Run a hash request first.');
        }
    }

    function copyPassportFromResponse() {
        if (lastPassport) {
            navigator.clipboard.writeText(lastPassport);
            const btn = document.getElementById('copyPassportBtn');
            btn.textContent = 'COPIED!';
            setTimeout(() => btn.textContent = 'COPY PASSPORT', 2000);
        }
    }

    function addToHistory(endpoint, status, latency) {
        const colorMap = { 200: 'text-green-400', 400: 'text-red-400', 429: 'text-yellow-400', 500: 'text-red-400' };
        const color = status >= 200 && status < 300 ? 'text-green-400' : 'text-red-400';
        const entry = { endpoint, status, latency, time: new Date().toLocaleTimeString() };
        requestHistory.unshift(entry);
        if (requestHistory.length > 5) requestHistory.pop();

        const container = document.getElementById('requestHistory');
        container.innerHTML = requestHistory.map(r =>
            `<div class="flex items-center justify-between">
                <span class="${r.status >= 200 && r.status < 300 ? 'text-green-500' : 'text-red-500'} mr-2">●</span>
                <span class="flex-1 text-gray-400">POST /api/${r.endpoint}</span>
                <span class="text-gray-600 mr-3">${r.time}</span>
                <span class="${r.status >= 200 && r.status < 300 ? 'text-green-500' : 'text-red-500'}">${r.status}</span>
                <span class="text-gray-600 ml-3">${r.latency}ms</span>
            </div>`
        ).join('');
    }

    function clearHistory() {
        requestHistory = [];
        document.getElementById('requestHistory').innerHTML = '<span class="text-gray-700 italic">No requests yet</span>';
    }

    async function sendRequest(e) {
        e.preventDefault();

        const apiKey = document.getElementById('apiKey').value;
        if (!apiKey) { alert('API Key is required'); return; }

        const endpoint = document.getElementById('endpoint').value;
        const btn = document.getElementById('sendBtn');
        const btnText = document.getElementById('btnText');
        const spinner = document.getElementById('btnSpinner');
        const output = document.getElementById('responseOutput');
        const statusBadge = document.getElementById('statusBadge');
        const latencyDisplay = document.getElementById('latencyDisplay');
        const copyPassportBtn = document.getElementById('copyPassportBtn');

        btn.disabled = true;
        btnText.textContent = 'Sending...';
        spinner.classList.remove('hidden');
        output.innerHTML = '<span class="text-gray-500 animate-pulse">// Processing request...</span>';
        copyPassportBtn.classList.add('hidden');

        const baseUrl = '<%= apiUrl %>'.replace(/\/$/, '');
        const url = `${baseUrl}/api/${endpoint}`;

        let body = {};
        if (endpoint === 'hash') {
            body.value = document.getElementById('hashPassword').value;
            const iter = document.getElementById('hashIterations').value;
            const algo = document.getElementById('hashAlgo').value;
            if (iter || algo) {
                body.options = {};
                if (iter) body.options.iterations = parseInt(iter);
                if (algo) body.options.algorithm = algo;
            }
        } else if (endpoint === 'verify') {
            body.value = document.getElementById('verifyPassword').value;
            body.passport = document.getElementById('verifyPassport').value;
        } else if (endpoint === 'inspect') {
            body.passport = document.getElementById('inspectPassport').value;
        } else if (endpoint === 'batch-verify') {
            const rawValues = document.getElementById('batchValues').value;
            body.values = rawValues.split(',').map(v => v.trim()).filter(Boolean);
            body.passport = document.getElementById('batchPassport').value;
        } else if (endpoint === 'security') {
            body.passport = document.getElementById('securityPassport').value;
        }

        const startTime = performance.now();
        try {
            const res = await fetch(url, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'x-api-key': apiKey },
                body: JSON.stringify(body)
            });

            const latency = Math.round(performance.now() - startTime);
            latencyDisplay.textContent = `LATENCY: ${latency} ms`;

            const data = await res.json();

            if (endpoint === 'hash' && data.passport) {
                lastPassport = data.passport;
                copyPassportBtn.classList.remove('hidden');
            }

            // Status badge
            statusBadge.className = 'px-2 py-0.5 rounded text-[10px] font-mono font-bold';
            if (res.ok) {
                statusBadge.textContent = `${res.status} OK`;
                statusBadge.classList.add('bg-green-900', 'text-green-300');
            } else {
                statusBadge.textContent = `${res.status} ERR`;
                statusBadge.classList.add('bg-red-900', 'text-red-300');
            }
            statusBadge.classList.remove('hidden');

            output.innerHTML = syntaxHighlight(JSON.stringify(data, null, 2));
            addToHistory(endpoint, res.status, latency);

        } catch (error) {
            const latency = Math.round(performance.now() - startTime);
            statusBadge.className = 'px-2 py-0.5 rounded text-[10px] font-mono font-bold bg-red-900 text-red-300';
            statusBadge.textContent = 'NET ERR';
            statusBadge.classList.remove('hidden');
            output.textContent = `// Network error: ${error.message}`;
            addToHistory(endpoint, 0, latency);
        } finally {
            btn.disabled = false;
            btnText.textContent = 'Send Request';
            spinner.classList.add('hidden');
        }
    }

    function syntaxHighlight(json) {
        json = json.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;');
        return json.replace(/(\"(\\u[a-zA-Z0-9]{4}|\\[^u]|[^\\"])*\"(\s*:)?|\b(true|false|null)\b|-?\d+(?:\.\d*)?(?:[eE][+\-]?\d+)?)/g, function (match) {
            let cls = 'text-purple-400';
            if (/^"/.test(match)) {
                cls = /:$/.test(match) ? 'text-blue-400' : 'text-green-400';
            } else if (/true|false/.test(match)) {
                cls = 'text-yellow-400';
            } else if (/null/.test(match)) {
                cls = 'text-red-400';
            }
            return `<span class="${cls}">${match}</span>`;
        });
    }

