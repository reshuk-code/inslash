<div class="space-y-8 animate-fadeIn pb-12">
    <!-- Header & Search -->
    <div class="flex flex-col md:flex-row md:items-end justify-between gap-6">
        <div>
            <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white tracking-tight">Projects</h1>
            <p class="text-gray-500 dark:text-gray-400 mt-2">Manage and monitor your security projects.</p>
        </div>
        <div class="flex flex-col sm:flex-row gap-3">
            <div class="relative group">
                <input type="text" id="projectSearch" placeholder="Search projects..."
                    class="pl-11 pr-4 py-3 w-full sm:w-64 glass-card border-0 rounded-xl focus:ring-2 focus:ring-indigo-500 transition-all">
                <div
                    class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-indigo-500 transition-colors">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
            </div>
            <a href="/projects/new"
                class="btn-primary flex items-center justify-center gap-2 hover-lift px-6 py-3 bg-gradient-premium border-0 shadow-lg shadow-indigo-500/20">
                <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4"></path>
                </svg>
                <span class="font-bold">New Project</span>
            </a>
        </div>
    </div>

    <!-- Projects Table Wrap -->
    <div class="glass-card rounded-2xl overflow-hidden border-0 shadow-2xl shadow-indigo-500/5">
        <% if (!projects || projects.length===0) { %>
            <div class="p-20 text-center">
                <div
                    class="inline-flex items-center justify-center w-20 h-20 rounded-3xl bg-indigo-50 dark:bg-indigo-900/20 text-indigo-600 dark:text-indigo-400 mb-6 animate-pulse">
                    <svg class="h-10 w-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                </div>
                <h3 class="text-2xl font-extrabold text-gray-900 dark:text-white">Create your first project</h3>
                <p class="text-gray-500 dark:text-gray-400 mt-2 mb-8 max-w-sm mx-auto font-medium">Projects help you
                    organize your API keys and security settings for different applications.</p>
                <a href="/projects/new" class="btn-primary px-10 py-4 text-lg inline-block">New Project</a>
            </div>
            <% } else { %>
                <div class="table-container border-0 shadow-none rounded-none">
                    <table class="table-clean w-full">
                        <thead>
                            <tr class="bg-gray-50/50 dark:bg-gray-800/30">
                                <th
                                    class="px-8 py-5 text-left text-xs font-bold text-gray-400 uppercase tracking-widest border-b border-gray-100 dark:border-gray-700/50">
                                    Project</th>
                                <th
                                    class="px-8 py-5 text-left text-xs font-bold text-gray-400 uppercase tracking-widest border-b border-gray-100 dark:border-gray-700/50">
                                    Status</th>
                                <th
                                    class="px-8 py-5 text-left text-xs font-bold text-gray-400 uppercase tracking-widest border-b border-gray-100 dark:border-gray-700/50">
                                    Validation Activity</th>
                                <th
                                    class="px-8 py-5 text-right text-xs font-bold text-gray-400 uppercase tracking-widest border-b border-gray-100 dark:border-gray-700/50">
                                    Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100 dark:divide-gray-700/50">
                            <% projects.forEach((project, index)=> { %>
                                <tr class="group hover:bg-gray-50/50 dark:hover:bg-gray-700/20 transition-all cursor-pointer"
                                    onclick="window.location.href='/projects/<%= project._id %>'">
                                    <td class="px-8 py-6">
                                        <div class="flex items-center gap-4">
                                            <div
                                                class="h-12 w-12 rounded-xl bg-gradient-premium flex items-center justify-center text-white shadow-lg shadow-indigo-500/10 group-hover:scale-110 transition-transform">
                                                <span class="font-black text-lg">
                                                    <%= project.name.charAt(0).toUpperCase() %>
                                                </span>
                                            </div>
                                            <div>
                                                <h4
                                                    class="font-extrabold text-gray-900 dark:text-white group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors">
                                                    <%= project.name %>
                                                </h4>
                                                <p
                                                    class="text-[10px] text-gray-400 uppercase tracking-widest font-bold mt-1">
                                                    ID: <%= project._id.toString().substring(0, 8) %>...
                                                </p>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-8 py-6">
                                        <div class="flex flex-wrap gap-2">
                                            <span
                                                class="badge !bg-green-500/10 !text-green-500 !border-green-500/20 border !rounded-lg px-2 py-0.5 font-bold text-[10px] uppercase tracking-widest">Active</span>
                                            <span
                                                class="badge !bg-indigo-500/10 !text-indigo-600 !border-indigo-500/20 border !rounded-lg px-2 py-0.5 font-bold text-[10px] uppercase tracking-widest">v1.2</span>
                                        </div>
                                    </td>
                                    <td class="px-8 py-6">
                                        <div class="flex items-center gap-3">
                                            <div class="flex-1 min-w-[120px]">
                                                <div
                                                    class="flex justify-between text-[10px] font-bold text-gray-400 uppercase tracking-widest mb-1.5">
                                                    <span>Validations</span>
                                                    <span class="text-indigo-500">
                                                        <%= (project.stats?.validationsCount || 0).toLocaleString() %>
                                                    </span>
                                                </div>
                                                <div
                                                    class="w-full bg-gray-100 dark:bg-gray-800 h-1.5 rounded-full overflow-hidden">
                                                    <div class="bg-indigo-500 h-full w-[100%]"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-8 py-6 text-right">
                                        <div class="flex items-center justify-end gap-2">
                                            <button
                                                class="p-2.5 glass-card border-0 rounded-lg text-gray-400 hover:text-indigo-600 dark:hover:text-indigo-400 hover:bg-white dark:hover:bg-gray-800 transition-all">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2.5" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                                                </svg>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>

                <!-- Table Footer -->
                <div
                    class="px-8 py-5 border-t border-gray-100 dark:border-gray-700/50 bg-gray-50/50 dark:bg-gray-800/30 flex items-center justify-between">
                    <p class="text-xs font-bold text-gray-400 uppercase tracking-widest">
                        Showing <span class="text-indigo-500">
                            <%= projects.length %>
                        </span> projects
                    </p>
                    <div class="flex gap-2">
                        <button
                            class="px-3 py-1.5 glass-card border-0 rounded-lg text-[10px] font-black uppercase tracking-widest text-gray-400 cursor-not-allowed"
                            disabled>Prev</button>
                        <button
                            class="px-3 py-1.5 glass-card border-0 rounded-lg text-[10px] font-black uppercase tracking-widest text-gray-400 cursor-not-allowed"
                            disabled>Next</button>
                    </div>
                </div>
                <% } %>
    </div>
</div>

<script>
    // Project search logic
    document.getElementById('projectSearch')?.addEventListener('input', function (e) {
        const term = e.target.value.toLowerCase();
        document.querySelectorAll('tbody tr').forEach(row => {
            const name = row.querySelector('h4').textContent.toLowerCase();
            row.style.display = name.includes(term) ? '' : 'none';
        });
    });
</script>