<div class="max-w-7xl mx-auto space-y-6">
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Projects</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Manage all your integrations and API keys.</p>
        </div>
        <div class="flex gap-3">
            <div class="relative">
                <input type="text" placeholder="Search projects..." class="input-clean pl-10 w-full md:w-64">
                <svg class="h-5 w-5 text-gray-400 absolute left-3 top-2.5" fill="none" stroke="currentColor"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
            </div>
            <a href="/projects/new" class="btn-primary flex items-center justify-center gap-2 whitespace-nowrap">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                New Project
            </a>
        </div>
    </div>

    <!-- Projects List -->
    <div class="card overflow-hidden">
        <div class="table-container border-0 shadow-none">
            <table class="table-clean">
                <thead>
                    <tr>
                        <th class="w-1/3 dark:bg-gray-800 dark:text-gray-400">Project Name</th>
                        <th class="dark:bg-gray-800 dark:text-gray-400">API Keys</th>
                        <th class="dark:bg-gray-800 dark:text-gray-400">Environment</th>
                        <th class="dark:bg-gray-800 dark:text-gray-400">Created</th>
                        <th class="dark:bg-gray-800 dark:text-gray-400">Status</th>
                        <th class="text-right dark:bg-gray-800 dark:text-gray-400">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (projects.length===0) { %>
                        <tr>
                            <td colspan="6" class="py-12 text-center text-gray-500 dark:text-gray-400">
                                <div class="flex flex-col items-center justify-center">
                                    <div class="bg-gray-100 dark:bg-gray-700 rounded-full p-4 mb-4">
                                        <svg class="h-8 w-8 text-gray-400 dark:text-gray-500" fill="none"
                                            stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10">
                                            </path>
                                        </svg>
                                    </div>
                                    <h3 class="text-lg font-medium text-gray-900 dark:text-white">No projects yet</h3>
                                    <p class="text-gray-500 dark:text-gray-400 mb-6 max-w-sm">Get started by creating
                                        your first project to
                                        integrate Inslash authentication into your app.</p>
                                    <a href="/projects/new" class="btn-primary">Create Project</a>
                                </div>
                            </td>
                        </tr>
                        <% } else { %>
                            <% projects.forEach(project=> { %>
                                <tr class="group cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors"
                                    onclick="window.location='/projects/<%= project._id %>'">
                                    <td>
                                        <div class="flex items-center">
                                            <div
                                                class="h-10 w-10 rounded-lg bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white font-bold text-lg mr-4 shadow-sm">
                                                <%= project.name.charAt(0).toUpperCase() %>
                                            </div>
                                            <div>
                                                <div
                                                    class="text-sm font-medium text-gray-900 dark:text-white group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors">
                                                    <%= project.name %>
                                                </div>
                                                <div class="text-xs text-gray-500 dark:text-gray-400">ID: <%=
                                                        project._id.toString().substring(0, 8) %>...</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="font-mono text-xs text-gray-600 dark:text-gray-300">
                                        <div class="flex items-center gap-2">
                                            <span
                                                class="bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded border border-gray-200 dark:border-gray-600">
                                                <%= project.apiKeys.length %> keys
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge badge-neutral">Production</span>
                                    </td>
                                    <td class="text-sm text-gray-500 dark:text-gray-400">
                                        <%= new Date(project.createdAt).toLocaleDateString(undefined, { year: 'numeric'
                                            , month: 'short' , day: 'numeric' }) %>
                                    </td>
                                    <td>
                                        <span class="badge badge-success">Active</span>
                                    </td>
                                    <td class="text-right">
                                        <div class="flex items-center justify-end gap-3"
                                            onclick="event.stopPropagation()">
                                            <a href="/projects/<%= project._id %>"
                                                class="text-gray-400 dark:text-gray-500 hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors bg-white dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700 p-1.5 rounded-md">
                                                <svg class="h-5 w-5" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z">
                                                    </path>
                                                </svg>
                                            </a>
                                            <button
                                                class="text-gray-400 dark:text-gray-500 hover:text-red-600 dark:hover:text-red-400 transition-colors bg-white dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700 p-1.5 rounded-md">
                                                <svg class="h-5 w-5" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16">
                                                    </path>
                                                </svg>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                                    <% } %>
                </tbody>
            </table>
        </div>

        <% if (projects.length> 0) { %>
            <div
                class="px-6 py-4 border-t border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800/50 flex items-center justify-between">
                <p class="text-sm text-gray-500 dark:text-gray-400">Showing <span class="font-medium">
                        <%= projects.length %>
                    </span> projects</p>
                <div class="flex gap-2">
                    <button
                        class="px-3 py-1 border border-gray-300 dark:border-gray-600 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 disabled:opacity-50 disabled:cursor-not-allowed"
                        disabled>Previous</button>
                    <button
                        class="px-3 py-1 border border-gray-300 dark:border-gray-600 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 disabled:opacity-50 disabled:cursor-not-allowed"
                        disabled>Next</button>
                </div>
            </div>
            <% } %>
    </div>
</div>