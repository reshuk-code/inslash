<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Account - Inslash</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>

<body class="bg-gray-950 text-gray-100 antialiased">

    <%- include('partials/auth-navbar') %>

        <div class="min-h-[calc(100vh-8rem)] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
            <div class="w-full max-w-md">

                <!-- Flash Messages -->
                <% if (typeof messages !=='undefined' ) { %>
                    <% if (messages.error && messages.error.length> 0) { %>
                        <div class="mb-4 p-4 bg-red-900/20 border border-red-500/50 rounded-lg">
                            <div class="flex items-start">
                                <svg class="w-5 h-5 text-red-400 mt-0.5 mr-3 flex-shrink-0" fill="currentColor"
                                    viewBox="0 0 20 20">
                                    <path fill-rule="evenodd"
                                        d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                                        clip-rule="evenodd" />
                                </svg>
                                <p class="text-sm text-red-200"><%- messages.error[0] %></p>
                            </div>
                        </div>
                        <% } %>
                            <% if (messages.success && messages.success.length> 0) { %>
                                <div class="mb-4 p-4 bg-green-900/20 border border-green-500/50 rounded-lg">
                                    <div class="flex items-start">
                                        <svg class="w-5 h-5 text-green-400 mt-0.5 mr-3 flex-shrink-0"
                                            fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd"
                                                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                                clip-rule="evenodd" />
                                        </svg>
                                        <p class="text-sm text-green-200">
                                            <%= messages.success[0] %>
                                        </p>
                                    </div>
                                </div>
                                <% } %>
                                    <% } %>

                                        <div
                                            class="bg-gray-900 border border-gray-800 shadow-xl rounded-2xl p-8 sm:p-10">

                                            <!-- Header -->
                                            <div class="text-center mb-8">
                                                <h2 class="text-3xl font-bold text-white">Create Account</h2>
                                                <p class="mt-2 text-sm text-gray-400">
                                                    Already have an account?
                                                    <a href="/login"
                                                        class="font-medium text-indigo-400 hover:text-indigo-300 transition-colors">Sign
                                                        in</a>
                                                </p>
                                            </div>

                                            <!-- Signup Form -->
                                            <form class="space-y-5" action="/signup" method="POST" id="signupForm">
                                                <!-- Username -->
                                                <div>
                                                    <label for="username"
                                                        class="block text-sm font-medium text-gray-300 mb-2">
                                                        Username
                                                    </label>
                                                    <input id="username" name="username" type="text" required
                                                        minlength="3"
                                                        class="block w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all"
                                                        placeholder="Choose a username">
                                                </div>

                                                <!-- Email -->
                                                <div>
                                                    <label for="email"
                                                        class="block text-sm font-medium text-gray-300 mb-2">
                                                        Email
                                                    </label>
                                                    <input id="email" name="email" type="email" required
                                                        class="block w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all"
                                                        placeholder="Enter your email">
                                                </div>

                                                <!-- Password -->
                                                <div>
                                                    <label for="password"
                                                        class="block text-sm font-medium text-gray-300 mb-2">
                                                        Password
                                                    </label>
                                                    <input id="password" name="password" type="password" required
                                                        minlength="8"
                                                        class="block w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all"
                                                        placeholder="Create password">
                                                    <!-- Password Strength Bar -->
                                                    <div class="mt-2 h-1 bg-gray-700 rounded-full overflow-hidden">
                                                        <div id="passwordStrength"
                                                            class="h-full transition-all duration-500 w-0"></div>
                                                    </div>
                                                    <p id="passwordHint" class="text-xs text-gray-500 mt-1">At least 8
                                                        characters</p>
                                                </div>

                                                <!-- Confirm Password -->
                                                <div>
                                                    <label for="confirmPassword"
                                                        class="block text-sm font-medium text-gray-300 mb-2">
                                                        Confirm Password
                                                    </label>
                                                    <input id="confirmPassword" name="confirmPassword" type="password"
                                                        required minlength="8"
                                                        class="block w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all"
                                                        placeholder="Confirm password">
                                                </div>

                                                <!-- Terms Checkbox -->
                                                <div class="flex items-start">
                                                    <div class="flex items-center h-5">
                                                        <input id="acceptTerms" name="acceptTerms" type="checkbox"
                                                            required
                                                            class="h-4 w-4 text-indigo-500 bg-gray-800 border-gray-600 rounded focus:ring-indigo-500 cursor-pointer">
                                                    </div>
                                                    <label for="acceptTerms"
                                                        class="ml-2 text-sm text-gray-400 cursor-pointer">
                                                        I agree to the
                                                        <a href="/terms" target="_blank"
                                                            class="text-indigo-400 hover:text-indigo-300 hover:underline">Terms
                                                            of Service</a>
                                                        and
                                                        <a href="/privacy" target="_blank"
                                                            class="text-indigo-400 hover:text-indigo-300 hover:underline">Privacy
                                                            Policy</a>
                                                    </label>
                                                </div>

                                                <!-- Submit Button -->
                                                <button type="submit" id="submitBtn"
                                                    class="w-full py-3 px-4 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                                                    <span id="buttonText">Create Account</span>
                                                </button>
                                            </form>

                                            <!-- Security Badge -->
                                            <div class="mt-6 pt-6 border-t border-gray-800 text-center">
                                                <p class="text-xs text-gray-600">
                                                    <svg class="w-3 h-3 inline" fill="none" stroke="currentColor"
                                                        viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z">
                                                        </path>
                                                    </svg>
                                                    Secured by Inslash
                                                </p>
                                            </div>
                                        </div>
            </div>
        </div>

        <%- include('partials/auth-footer') %>

            <script>
                // Password strength indicator
                const passwordInput = document.getElementById('password');
                const strengthBar = document.getElementById('passwordStrength');
                const strengthHint = document.getElementById('passwordHint');

                passwordInput.addEventListener('input', function () {
                    const password = this.value;
                    let strength = 0;
                    let hint = '';
                    let colorClass = '';

                    if (password.length >= 8) strength += 25;
                    if (password.match(/[a-z]+/)) strength += 25;
                    if (password.match(/[A-Z]+/)) strength += 25;
                    if (password.match(/[0-9]+/)) strength += 12.5;
                    if (password.match(/[!@#$%^&*]+/)) strength += 12.5;

                    strengthBar.className = 'h-full transition-all duration-500 w-0';

                    if (strength <= 25) {
                        hint = 'Weak';
                        colorClass = 'bg-red-500';
                    } else if (strength <= 50) {
                        hint = 'Fair';
                        colorClass = 'bg-yellow-500';
                    } else if (strength <= 75) {
                        hint = 'Good';
                        colorClass = 'bg-blue-500';
                    } else {
                        hint = 'Strong';
                        colorClass = 'bg-green-500';
                    }

                    if (password.length === 0) strength = 0;

                    strengthBar.style.width = strength + '%';
                    strengthBar.classList.add(colorClass);
                    strengthHint.innerText = hint;
                    strengthHint.className = 'text-xs mt-1 font-bold transition-colors ' + colorClass.replace('bg-', 'text-');
                });

                // Confirm password validation
                const confirmInput = document.getElementById('confirmPassword');
                confirmInput.addEventListener('input', function () {
                    const pass = passwordInput.value;
                    const conf = this.value;
                    if (conf && pass !== conf) {
                        this.classList.add('border-red-500');
                        this.classList.remove('border-green-500');
                    } else if (conf && pass === conf) {
                        this.classList.remove('border-red-500');
                        this.classList.add('border-green-500');
                    } else {
                        this.classList.remove('border-red-500', 'border-green-500');
                    }
                });

                // Form submission
                const form = document.getElementById('signupForm');
                const submitBtn = document.getElementById('submitBtn');
                const buttonText = document.getElementById('buttonText');

                form.addEventListener('submit', function (e) {
                    if (passwordInput.value !== confirmInput.value) {
                        e.preventDefault();
                        confirmInput.focus();
                        return;
                    }
                    submitBtn.disabled = true;
                    submitBtn.classList.add('cursor-not-allowed', 'opacity-80');
                    buttonText.innerHTML = '<svg class="animate-spin -ml-1 mr-2 h-5 w-5 text-white inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Creating Account...';
                });
            </script>
</body>

</html>