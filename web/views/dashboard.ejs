<div class="space-y-10 animate-fadeIn pb-16">
    <!-- Header Section -->
    <div class="flex flex-col md:flex-row md:items-end justify-between gap-6">
        <div class="space-y-1">
            <h1 class="text-3xl font-extrabold text-slate-900 dark:text-white tracking-tighter">
                Dashboard Overview
            </h1>
            <p class="text-slate-500 dark:text-slate-400 font-medium">
                Monitoring security across <span class="text-slate-900 dark:text-white font-bold">
                    <%= projects.length %>
                </span>
                <%= projects.length===1 ? 'project' : 'projects' %>.
            </p>
        </div>
        <a href="/projects/new"
            class="btn-primary flex items-center justify-center gap-2 px-6 py-3 shadow-xl shadow-slate-200 dark:shadow-none">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4"></path>
            </svg>
            <span class="text-sm">New Project</span>
        </a>
    </div>

    <!-- Stats Grid - Precision Focused -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="card p-8 group">
            <div class="flex items-center justify-between mb-4">
                <div
                    class="p-3 rounded-xl bg-slate-50 dark:bg-white/5 text-slate-400 group-hover:text-indigo-500 transition-colors">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10">
                        </path>
                    </svg>
                </div>
                <span class="badge badge-indigo">Global Scope</span>
            </div>
            <p class="text-xs font-bold uppercase tracking-widest text-slate-400">Total Projects</p>
            <h3 class="text-4xl font-extrabold text-slate-900 dark:text-white mt-1">
                <%= projects.length %>
            </h3>
        </div>

        <div class="card p-8 group">
            <div class="flex items-center justify-between mb-4">
                <div
                    class="p-3 rounded-xl bg-slate-50 dark:bg-white/5 text-slate-400 group-hover:text-emerald-500 transition-colors">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                </div>
                <span class="badge badge-success">Live Stream</span>
            </div>
            <p class="text-xs font-bold uppercase tracking-widest text-slate-400">Total Validations</p>
            <h3 class="text-4xl font-extrabold text-slate-900 dark:text-white mt-1">
                <%= stats.totalValidations.toLocaleString() %>
            </h3>
        </div>

        <div class="card p-8 group">
            <div class="flex items-center justify-between mb-4">
                <div
                    class="p-3 rounded-xl bg-slate-50 dark:bg-white/5 text-slate-400 group-hover:text-indigo-500 transition-colors">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <span class="badge badge-success">Operational</span>
            </div>
            <p class="text-xs font-bold uppercase tracking-widest text-slate-400">System Status</p>
            <div class="flex items-baseline gap-2 mt-1">
                <h3 class="text-3xl font-extrabold text-slate-900 dark:text-white">API Online</h3>
            </div>
        </div>
    </div>

    <!-- Layout Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-10">
        <!-- Main Activity -->
        <div class="lg:col-span-3 space-y-6">
            <div class="flex items-center justify-between">
                <h2 class="text-xl font-bold text-slate-900 dark:text-white tracking-tight">Recent Projects</h2>
                <a href="/projects"
                    class="text-xs font-bold uppercase tracking-widest text-indigo-500 hover:text-indigo-600 transition-colors">View
                    All Projects</a>
            </div>

            <div class="card divide-y dark:divide-white/5">
                <% if (!projects || projects.length===0) { %>
                    <div class="p-12 text-center">
                        <p class="text-slate-500 dark:text-slate-400 font-medium">No active projects found.</p>
                        <a href="/projects/new" class="text-indigo-500 font-bold text-sm mt-2 inline-block">Create your
                            first project</a>
                    </div>
                    <% } else { %>
                        <% projects.slice(0, 5).forEach(project=> { %>
                            <div class="p-6 flex items-center justify-between group hover:bg-slate-50 dark:hover:bg-white/5 transition-colors cursor-pointer"
                                onclick="window.location.href='/projects/<%= project._id %>'">
                                <div class="flex items-center gap-4">
                                    <div
                                        class="h-10 w-10 rounded-lg bg-slate-100 dark:bg-white/5 flex items-center justify-center text-slate-500 font-bold group-hover:bg-indigo-500 group-hover:text-white transition-all">
                                        <%= project.name.charAt(0).toUpperCase() %>
                                    </div>
                                    <div>
                                        <h4 class="text-sm font-bold text-slate-900 dark:text-white">
                                            <%= project.name %>
                                        </h4>
                                        <p class="text-[10px] text-slate-400 font-bold uppercase tracking-widest mt-1">
                                            <%= project.apiKeys.length %> Secret Keys â€¢ Built <%= new
                                                    Date(project.createdAt).toLocaleDateString() %>
                                        </p>
                                    </div>
                                </div>
                                <div class="flex items-center gap-6">
                                    <div class="hidden sm:block text-right">
                                        <p class="text-xs font-bold text-slate-900 dark:text-white">Active</p>
                                        <p class="text-[10px] text-slate-400 font-bold uppercase tracking-widest">Status
                                        </p>
                                    </div>
                                    <svg class="w-5 h-5 text-slate-300 group-hover:text-slate-900 dark:group-hover:text-white transition-colors"
                                        fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                            d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </div>
                            </div>
                            <% }); %>
                                <% } %>
            </div>
        </div>

        <!-- Sidebar Actions -->
        <div class="space-y-8">
            <div
                class="bg-indigo-600 rounded-3xl p-8 text-white relative overflow-hidden shadow-2xl shadow-indigo-500/20">
                <div class="relative z-10">
                    <h3 class="text-xl font-extrabold tracking-tight">Sandbox Console</h3>
                    <p class="text-indigo-100/80 text-sm mt-2 leading-relaxed font-medium">Test your implementation
                        sequences in a secure, isolated environment.</p>
                    <a href="/console"
                        class="mt-6 block w-full text-center py-3 bg-white text-indigo-600 rounded-xl text-sm font-bold hover:bg-indigo-50 transition-colors">Open
                        Sandbox</a>
                </div>
                <svg class="absolute -right-4 -bottom-4 h-32 w-32 text-white/10" fill="currentColor"
                    viewBox="0 0 24 24">
                    <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
                </svg>
            </div>

            <div class="card p-6">
                <h3 class="text-xs font-bold uppercase tracking-widest text-slate-400 mb-6">Quick Integration</h3>
                <div class="space-y-4">
                    <a href="/docs" class="flex items-center justify-between group">
                        <div class="flex items-center gap-3">
                            <div
                                class="h-8 w-8 rounded-lg bg-emerald-50 dark:bg-emerald-500/10 flex items-center justify-center text-emerald-600">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                        d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z">
                                    </path>
                                </svg>
                            </div>
                            <span
                                class="text-sm font-bold text-slate-700 dark:text-slate-300 group-hover:text-slate-900 dark:group-hover:text-white transition-colors">Documentation</span>
                        </div>
                        <svg class="w-4 h-4 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7">
                            </path>
                        </svg>
                    </a>
                    <a href="/api-keys" class="flex items-center justify-between group">
                        <div class="flex items-center gap-3">
                            <div
                                class="h-8 w-8 rounded-lg bg-indigo-50 dark:bg-indigo-500/10 flex items-center justify-center text-indigo-600">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                                        d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z">
                                    </path>
                                </svg>
                            </div>
                            <span
                                class="text-sm font-bold text-slate-700 dark:text-slate-300 group-hover:text-slate-900 dark:group-hover:text-white transition-colors">Manage
                                Secrets</span>
                        </div>
                        <svg class="w-4 h-4 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7">
                            </path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>