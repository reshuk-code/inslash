<div class="min-h-[85vh] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
    <!-- Main Precision Card -->
    <div class="max-w-xl w-full card border-slate-200 shadow-2xl relative z-10 animate-fadeIn p-10 sm:p-14">
        <div class="space-y-10">
            <!-- Header -->
            <div class="space-y-4">
                <div
                    class="inline-flex h-12 w-12 rounded-xl bg-slate-900 flex items-center justify-center text-white shadow-lg dark:bg-white dark:text-slate-900">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5"
                            d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                </div>
                <div>
                    <h1 class="text-3xl font-extrabold text-slate-900 dark:text-white tracking-tighter">New Project</h1>
                    <p class="text-slate-500 dark:text-slate-400 mt-2 font-medium leading-relaxed">Create a new project
                        to organize your API keys and security settings.</p>
                </div>
            </div>

            <!-- Form -->
            <form action="/projects/create" method="POST" class="space-y-8">
                <div class="space-y-6">
                    <!-- Project Identity -->
                    <div class="space-y-2">
                        <label for="name"
                            class="text-[10px] font-black uppercase tracking-widest text-slate-400">Project Name</label>
                        <input type="text" name="name" id="name" required class="input-clean"
                            placeholder="e.g. Production API" autofocus>
                        <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">A descriptive name for
                            this project.</p>
                    </div>

                    <!-- Manifest Description -->
                    <div class="space-y-2">
                        <label for="description"
                            class="text-[10px] font-black uppercase tracking-widest text-slate-400">
                            Description <span
                                class="text-slate-300 dark:text-slate-600 font-bold lowercase italic">(optional)</span>
                        </label>
                        <textarea name="description" id="description" rows="4"
                            class="input-clean bg-slate-50 dark:bg-white/5"
                            placeholder="Brief description of the project's purpose..."></textarea>
                    </div>
                </div>

                <!-- Footer Actions -->
                <div class="pt-6 flex flex-col sm:flex-row items-center gap-4">
                    <button type="submit" class="btn-primary w-full sm:flex-[2]">Create Project</button>
                    <a href="/projects"
                        class="w-full sm:flex-1 text-center text-sm font-bold text-slate-400 hover:text-slate-900 dark:hover:text-white transition-colors">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>