<div class="min-h-[80vh] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 relative overflow-hidden">
    <!-- Grid Pattern -->
    <div
        class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px]">
    </div>

    <!-- Main Card -->
    <div
        class="max-w-xl w-full bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 rounded-2xl shadow-sm relative z-10">
        <div class="p-8 sm:p-10">
            <div class="text-center mb-8">
                <div
                    class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-indigo-50 dark:bg-indigo-900/20 text-indigo-600 dark:text-indigo-400 mb-4">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                </div>
                <h1 class="text-2xl font-bold text-gray-900 dark:text-white tracking-tight">Create New Project</h1>
                <p class="text-gray-500 dark:text-gray-400 mt-2 text-sm">Initialize a secure container for your
                    application's auth data.</p>
            </div>

            <form action="/projects/create" method="POST" class="space-y-6">
                <!-- Project Name -->
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1.5">Project
                        Name</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z">
                                </path>
                            </svg>
                        </div>
                        <input type="text" name="name" id="name" required
                            class="block w-full pl-10 pr-3 py-2.5 border border-gray-300 dark:border-gray-700 rounded-lg learning-ring focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 bg-white dark:bg-gray-950 text-gray-900 dark:text-white sm:text-sm transition-all"
                            placeholder="e.g. My SaaS App" autofocus>
                    </div>
                    <p class="mt-1.5 text-xs text-gray-500 dark:text-gray-400">Unique identifier for your application.
                    </p>
                </div>

                <!-- Description -->
                <div>
                    <label for="description" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1.5">
                        Description <span class="text-gray-400 dark:text-gray-600 font-normal">(Optional)</span>
                    </label>
                    <textarea name="description" id="description" rows="3"
                        class="block w-full px-3 py-2.5 border border-gray-300 dark:border-gray-700 rounded-lg learning-ring focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 bg-white dark:bg-gray-950 text-gray-900 dark:text-white sm:text-sm transition-all resize-none"
                        placeholder="Briefly describe this project's purpose..."></textarea>
                </div>

                <!-- Actions -->
                <div class="pt-4 flex items-center justify-end gap-3">
                    <a href="/projects"
                        class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors">
                        Cancel
                    </a>
                    <button type="submit"
                        class="px-6 py-2 bg-gray-900 dark:bg-white text-white dark:text-gray-900 text-sm font-medium rounded-lg hover:bg-black dark:hover:bg-gray-100 transition-colors shadow-sm">
                        Create Project
                    </button>
                </div>
            </form>
        </div>

        <!-- Bottom Decoration -->
        <div class="h-1.5 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 rounded-b-2xl opacity-80"></div>
    </div>
</div>