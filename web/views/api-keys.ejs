<div class="max-w-5xl mx-auto space-y-6">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">API Keys</h1>
            <p class="text-sm text-gray-500 mt-1">Manage access tokens for your applications.</p>
        </div>
        <button class="btn-primary flex items-center justify-center gap-2">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Generate New Key
        </button>
    </div>

    <div class="card overflow-hidden">
        <div class="table-container border-0 shadow-none">
            <table class="table-clean">
                <thead>
                    <tr>
                        <th>Name/Tag</th>
                        <th>API Key Prefix</th>
                        <th>Project</th>
                        <th>Created</th>
                        <th>Last Used</th>
                        <th>Permissions</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (keys && keys.length> 0) { %>
                        <% keys.forEach(key=> { %>
                            <tr>
                                <td class="font-medium text-gray-900">
                                    <%= key.name || 'Untitled Key' %>
                                </td>
                                <td class="font-mono text-xs text-gray-600">
                                    <div class="flex items-center gap-2">
                                        <span id="key-display-<%= key.projectId %>-<%= key.prefix %>">
                                            inslash_<%= key.prefix || 'xxxx' %>••••••••
                                        </span>
                                        <button onclick="toggleKey(this, '<%= key.fullKey %>')"
                                            class="text-gray-400 hover:text-indigo-600 focus:outline-none"
                                            title="Show/Hide Key">
                                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                            </svg>
                                        </button>
                                    </div>
                                </td>
                                <td class="text-sm text-gray-600">
                                    <%= key.projectName || 'General' %>
                                </td>
                                <td class="text-sm text-gray-500">
                                    <%= new Date(key.createdAt).toLocaleDateString() %>
                                </td>
                                <td class="text-sm text-gray-500">
                                    <%= key.lastUsed ? new Date(key.lastUsed).toLocaleDateString() : 'Never' %>
                                </td>
                                <td>
                                    <span class="badge badge-indigo">Full Access</span>
                                </td>
                                <td class="text-right">
                                    <button onclick="revokeKey('<%= key.projectId %>', '<%= key.keyId %>')"
                                        class="text-red-600 hover:text-red-800 text-sm font-medium">Revoke</button>
                                </td>
                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <!-- Empty State -->
                                    <tr>
                                        <td colspan="7" class="py-12 text-center text-gray-500">
                                            <div class="flex flex-col items-center justify-center">
                                                <div class="bg-indigo-50 rounded-full p-3 mb-4 text-indigo-500">
                                                    <svg class="h-8 w-8" fill="none" stroke="currentColor"
                                                        viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z">
                                                        </path>
                                                    </svg>
                                                </div>
                                                <h3 class="text-lg font-medium text-gray-900">No API Keys</h3>
                                                <p class="text-gray-500 mb-6 max-w-sm">API keys allow you to
                                                    authenticate requests from your application.</p>
                                                <a href="/projects/new" class="btn-primary">Generate Your First Key</a>
                                            </div>
                                        </td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Security Tips -->
    <div class="bg-blue-50 border border-blue-100 rounded-xl p-6">
        <div class="flex items-start gap-4">
            <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <div>
                <h4 class="text-lg font-medium text-blue-900">Security Best Practices</h4>
                <ul class="mt-2 space-y-1 text-sm text-blue-800 list-disc list-inside">
                    <li>Never expose your API keys in client-side code (browsers, mobile apps).</li>
                    <li>Use environment variables to store keys securely on your server.</li>
                    <li>Rotate your keys periodically if you suspect they have been compromised.</li>
                    <li>Create separate keys for different environments (Development, Production).</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleKey(btn, fullKey) {
        const span = btn.previousElementSibling;
        const isHidden = span.textContent.includes('••••');

        if (isHidden) {
            span.textContent = fullKey;
            btn.innerHTML = `<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" /></svg>`;
        } else {
            const prefix = fullKey.substring(8, 16);
            span.textContent = 'inslash_' + prefix + '••••••••';
            btn.innerHTML = `<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" /></svg>`;
        }
    }

    async function revokeKey(projectId, keyId) {
        if (!confirm('Are you sure you want to revoke this API key? This action cannot be undone.')) return;

        try {
            const res = await fetch(`/projects/${projectId}/revoke-key/${keyId}`, { method: 'POST' });
            if (res.ok) {
                window.location.reload();
            } else {
                const data = await res.json();
                alert('Failed to revoke key: ' + (data.error || 'Unknown error'));
            }
        } catch (e) {
            console.error(e);
            alert('Error revoking key');
        }
    }
</script>