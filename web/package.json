{
  "name": "inslash-demo",
  "version": "1.0.0",
  "description": "Professional Inslash Authentication Demo",
  "main": "app.js",
  "scripts": {
    "build:css": "tailwindcss -i ./public/css/tailwind.css -o ./public/css/styles.css --minify",
    "build": "npm run build:css",
    "watch:css": "tailwindcss -i ./public/css/tailwind.css -o ./public/css/styles.css --watch",
    "start": "npm run build:css && node app.js",
    "dev": "concurrently \"npm run watch:css\" \"nodemon app.js\""
  },
  "dependencies": {
    "axios": "^1.13.5",
    "bcryptjs": "^3.0.3",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^4.6.0",
    "cookie-parser": "^1.4.7",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.19.0",
    "inslash": "^1.1.1",
    "mongoose": "^7.5.0",
    "nodemailer": "^8.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.15",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3"
  },
  "engines": {
    "node": ">=18.x"
  }
}